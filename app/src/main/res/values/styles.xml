<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomFont" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/DancingScript-Regular.ttf</item>
    </style>
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--BasicDetails Screen-->

    <style name="BasicDetailsTextView" parent="MatchWrap">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BasicDetailsMaterialTextView" parent="MatchWrap">
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <style name="BasicDetailsEditText" parent="MatchWrap">
        <item name="android:textColor">@color/darkGrayColor</item>
        <item name="android:textColorHint">@color/grayColor</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BasicDetailsButton" parent="MatchWrap">
        <item name="android:layout_marginEnd">@dimen/xl_size</item>
        <item name="android:layout_marginStart">@dimen/xl_size</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/round_white_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--GenderFragment-->
    <style name="GenderFragmentView">
        <item name="android:layout_width">@dimen/semi_huge_size</item>
        <item name="android:layout_height">@dimen/larger_size</item>
        <item name="android:layout_marginStart">@dimen/medium_size</item>
        <item name="android:layout_marginTop">@dimen/semi_medium_size</item>
    </style>

    <style name="SeventyDP">
        <item name="android:layout_width">@dimen/xlarge_size</item>
        <item name="android:layout_height">@dimen/xlarge_size</item>
    </style>

    <style name="View">
        <item name="android:layout_width">@dimen/xlarge_size</item>
        <item name="android:layout_height">@dimen/xlarge_size</item>
        <item name="android:background">@drawable/circular_male_gender</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ViewWithImage">
        <item name="android:layout_width">@dimen/spacing_xxl</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/medium_size</item>
        <item name="android:src">@drawable/ic_male</item>
    </style>

    <style name="DefaultNumberPickerTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>
