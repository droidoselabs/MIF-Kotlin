<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    android:animateLayoutChanges="true"
    android:background="@color/fragementBg"
    android:gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/huge_size"
        android:layout_marginStart="@dimen/spacing_small"
        android:src="@drawable/ic_logo" />

    <Button
        android:id="@+id/btnStart"
        style="@style/BasicDetailsButton"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/get_started" />

    <LinearLayout
        android:id="@+id/viewCircle"
        style="@style/MatchWrap"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center">

        <View
            android:layout_width="@dimen/spacing_xl"
            android:layout_height="@dimen/spacing_xl"
            android:background="@drawable/round_white_button" />
    </LinearLayout>

</RelativeLayout>
