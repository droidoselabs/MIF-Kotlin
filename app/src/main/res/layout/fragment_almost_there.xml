<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragementBg"
    tools:context="in.droidoselabs.missionindiafit.fragment.AlmostTherefragment">

    <TextView
        style="@style/BasicDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signing_up"
        android:layout_marginTop="@dimen/huge_size"
        android:textSize="@dimen/font_huge" />

    <ImageView
        android:id="@+id/running"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true" />

    <TextView
        style="@style/BasicDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/running"
        android:text="@string/you_are_almost_there"
        android:textSize="@dimen/font_medium" />
</RelativeLayout>
